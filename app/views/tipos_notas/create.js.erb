#Simplemente informar el resultado del metodo create
%>
<% if @tipo_nota.valid? %>

  $("#message-remote").html('<p class="alert">El Tipo de Documentación se guardo correctamente</p>');
  $("#listado-tipo_nota").append("<%= escape_javascript(render("single_row_index"))%>");
<%
   else
       strerror="<h3>"+pluralize(@tipo_nota.errors.count, "Error")+ " produjo que el Tipo de Documentación no se guardara:</h3>"

       @organismo.errors.each_with_index do |msg, i|
          strerror +='<p class="error">'+ msg[1] +'</p>'
       end

%>

$("#message-remote").html('<%= raw(strerror) %>');

<% end %>
