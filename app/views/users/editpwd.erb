<div class="form-v3">

<h1>Editar Contraseña de acceso</h1>


<%= form_for [ :updatepwd, @user ], method: :post do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>  produjo que el usuario no se guardara:</h2>
      <ul>
        <% @user.errors.each_with_index do |msg, i| %>
          <li><%= msg[1] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <p>Nombre de Usuario: <%= @user.username %></p>
  </div>
  <div class="field">
    <p>Email: <%= @user.email %></p>
  </div>
  <div class="field">
    <p>Rol: <%= @user.rol.name %></p>
  </div>
  <div class="field" id="div-dependencia">
    <p>Dependencia: <%= @user.dependencia.fullname unless  @user.dependencia.nil? %></p>
  </div>
  <div class="field">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password , :class=>"field"%>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmar" %><br />
    <%= f.password_field :password_confirmation, :class=>"field" %>
  </div>
 <div class="actions">
    <center><%= f.submit "Aceptar", :class => 'button-v1' %></center>
  </div>
<% end %>

</div>
