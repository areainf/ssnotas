<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{ :class =>  "form-signin",:role => "form"}) do |f| %>
  <h2 class="form-signin-heading">Ingresar al sistema</h2>
  <%= f.text_field :username, :class => "form-control", :placeholder => "Nombre de usuario", :required=>"true", :autofocus=>"true"%>
  <%= f.password_field :password, :class => "form-control", :placeholder => "ContraseÃ±a", :required=>true %>
  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %> <%= f.label :remember_me , "Recordarme"%>
    </div>
  <% end -%>
  <%= submit_tag "Aceptar", :class => 'btn btn-lg btn-primary btn-block' %>
<% end %>


