<%
if @cssclass.nil?
  @cssclass= 'list-line-odd'
end
%>
  <div id="organismo_<%= @organismo.id %>" class="row <%= @cssclass unless @cssclass.nil? %>">
    <div class="datagrid-cell">
      <div  class="col-xs-1 col-sm-1 col-md-1  col-lg-1"><%= @organismo.id %></div>
      <div class="col-xs-4 col-sm-4 col-md-4  col-lg-4"><%= @organismo.nombre %></div>
      <div class="col-xs-4 col-sm-4 col-md-4  col-lg-4"><%= @organismo.descripcion %></div>
      <div class="col-xs-1 col-sm-1 col-md-1  col-lg-1"><%= @organismo.codigo%></div>
      <div class="col-xs-2 col-sm-2 col-md-2  col-lg-2"  style="text-align: right;">

         <div class="btn-group col-button">

           <%= link_to image_tag("view16x16.png",{:align => "middle",  :alt=>"Ver", :border => "0"}), @organismo ,{:title =>"Ver más información", :class=>"boton-row"}%>

           <% if ! mobile_device? %>
              <%= link_to image_tag("edit16x16.png",{:align => "middle", :alt=>"Editar", :border => "0"}), "#",{:title =>"Editar", :class=>"boton-row", :onClick=>"return openEditOrganismo('#{edit_organismo_path(@organismo,:remote=>true)}');"}%>
              <%= link_to image_tag("delete16x16.png",{:align => "middle",  :alt=>"Eliminar", :border => "0"}), delete_organismo_path(@organismo), {data: { confirm: 'Eliminara el organismo. ¿Esta seguro?' },:title =>"Eliminar", :class=>"boton-row",:remote=>true }%>
           <% else %>

                 <%= link_to image_tag("edit16x16.png",{:align => "middle", :alt=>"Editar", :border => "0"}), edit_organismo_path(@organismo),{:title =>"Editar", :class=>"boton-row"}%>
                 <%= link_to image_tag("delete16x16.png",{:align => "middle",  :alt=>"Eliminar", :border => "0"}), @organismo, {method: :delete, data: { confirm: 'Eliminara el organismo. ¿Esta seguro?' },:title =>"Eliminar", :class=>"boton-row"}%>
           <% end %>

           <%=
           #
           %>
         </div>
      </div>
    </div>
  </div>
